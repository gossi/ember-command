{
  "extends": "@ember/app-tsconfig",
  "include": [
    "src",
    "tests",
    "types"
  ],
  // https://github.com/gossi/ember-command/issues/139
  "exclude": [
    "tests/rendering/command-element-test.gts"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "#src": [
        "./src/index.ts"
      ],
      "#src/*": [
        "./src/*"
      ],
      "#test-support": [
        "./src/test-support/index.ts"
      ],
      "#tests/*": [
        "./tests/*"
      ]
    },
    "types": [
      "ember-source/types",
      "vite/client",
      "@embroider/core/virtual"
    ]
  }
}
