{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "test-app/tests/*": [
        "tests/*"
      ],
      "test-app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    // make type checking work:
    "skipLibCheck": true,
    // allow tests to compile for ember versions below v3
    "noEmitOnError": false
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ]
}